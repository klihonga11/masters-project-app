<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobi.publishing.recipes">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="mobi.publishing.recipes.helpers.MyFirebaseApp">
        <activity
            android:name=".views.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.DiscoverActivity"
            android:label="@string/title_activity_discover"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.ViewRecipeActivity"
            android:label="@string/title_activity_view_recipe"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.SuggestedRecipesActivity"
            android:label="@string/title_activity_suggested_recipes"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.ConfirmIngredientsActivity"
            android:label="@string/title_activity_confirm_ingredients"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.AddIngredientsActivity"
            android:label="@string/title_activity_add_ingredients"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.TakePhotoActivity"
            android:label="@string/title_activity_take_photo"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.AccountActivity"
            android:label="@string/title_activity_account"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.RecipeCategoriesActivity"
            android:label="@string/title_activity_recipe_categories"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
        <activity
            android:name=".views.activities.RecipesActivity"
            android:label="@string/title_activity_recipes"
            android:parentActivityName=".views.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mobi.publishing.recipes.views.activities.MainActivity" />
        </activity>
    </application>

</manifest>